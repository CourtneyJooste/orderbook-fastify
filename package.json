{
  "name": "orderbook-fastify",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn dist && node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "build": "rimraf dist && tsc",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
    "format": "prettier-standard --format --fix \"src/**/*.{js,ts}\"",
    "lint": "prettier-standard --lint src/**/*.{js,ts}",
    "coverage": "cat ./test/coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "fastify": "^3.25.3"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.8",
    "concurrently": "^7.0.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "husky": "^3.0.9",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "prettier-standard": "^16.4.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tx,tsx}": [
      "prettier-standard --staged --format --fix"
    ]
  }
}
